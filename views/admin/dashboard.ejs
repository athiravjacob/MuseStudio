<!DOCTYPE HTML>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Evara Dashboard</title>
<%-include('../layoutAdmin/header.ejs') %>

<body>
    <div class="screen-overlay"></div>
    <%- include('../layoutAdmin/asideMenu.ejs') %>
    <main class="main-wrap">
        <%- include('../layoutAdmin/navigation.ejs') %>
       
        <div class="container mt-5 p-3">
            <h2 class="m-4"><%=heading %></h2>
            
            <div class="row mb-3">
                <div class="col-md-6">
                    <div class="input-group">
                        <input type="date" id="dateFrom" class="form-control" placeholder="dd-mm-yyyy">
                        <span class="input-group-text">to</span>
                        <input type="date" id="dateTill" class="form-control" placeholder="dd-mm-yyyy">
                        <button class="btn btn-primary" onclick="customDate('')" type="button">Apply</button>
                    </div>
                </div>
                <div class="col-md-6 text-end">
                    <button class="btn btn-primary" onclick="customDate('today')">Today's</button>
                    <button class="btn btn-primary" onclick="customDate('week')">This Week</button>
                    <button class="btn btn-primary" onclick="customDate('month')">This Month</button>
                </div>
            </div>
    
            <div class="row mb-4">
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <h6 class="card-title">Overall Sales Count</h6>
                            <p class="overall-stats text-success"><%=salesCount %></p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <h6 class="card-title">Overall Order Amount</h6>
                            <p class="overall-stats">₹<%=totalSalesAmount.toFixed(1) %></p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <h6 class="card-title">Overall Discount</h6>
                            <p class="overall-stats">₹<%=totDiscount.toFixed(1) %></p>
                        </div>
                    </div>
                </div>
            </div>
    
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Orders</th>
                        <th>Gross Sales</th>
                        <th>Coupon Deductions</th>
                        <th>Net Sales</th>
                    </tr>
                </thead>
                <tbody>
                    <% 
                    let totalOrders = 0;
                    let totalGrossSales = 0;
                    let totalCouponDiscount = 0;
                    let totalNetSales = 0;
            
                    if(sales && sales.length > 0) { 
                        sales.forEach(sale => { 
                            totalOrders += Number(sale.totalOrders);
                            totalGrossSales += Number(sale.grossSales);
                            totalCouponDiscount += Number(sale.couponDiscount);
                            totalNetSales += Number(sale.grossSales) - Number(sale.couponDiscount);
                    %>
                    <tr>
                        <td><%= sale.date %></td>
                        <td><%= sale.totalOrders %></td>
                        <td>₹<%= sale.grossSales %></td>
                        <td>₹<%= sale.couponDiscount %></td>
                        <td>₹<%= Number(sale.grossSales) - Number(sale.couponDiscount) %></td>
                    </tr>
                    <% 
                        }); 
                    } 
                    %>
                </tbody>
                <tfoot class="table-primary">
                    <tr>
                        <th>Total :</th>
                        <td><%= totalOrders %></td>
                        <td>₹<%= totalGrossSales.toFixed(1) %></td>
                        <td>₹<%= totalCouponDiscount.toFixed(1) %></td>
                        <td>₹<%= totalNetSales.toFixed(1) %></td>
                    </tr>
                </tfoot>
            </table>
            <button class="btn btn-primary my-4" onclick="download('<%=sales%>','<%=salesCount%>','<%=totalSalesAmount%>','<%=totDiscount%>','<%=heading%>')"  >Download PDF</a>

  
            
        </div>
        <script>
            const download = async(sales, salesCount, totalSalesAmount, totalDiscount, heading) => {
            try {
                const data = {
                    sales: JSON.stringify(sales), 
                    salesCount,
                    totalSalesAmount,
                    totalDiscount,
                    heading
                };
                const params = new URLSearchParams(data);
                const response = await fetch(`/admin/dashboard/download_salesreport?${params}`, {
                    method: "GET",
                    headers: {'Content-Type': 'application/json'}
                });
                // Handle the response here
            } catch (error) {
                console.log(error);
            }
        };

            const customDate = async(search)=>{
                try {
                    let startDate
                    let endDate
                    if(search ==''){
                         startDate = document.getElementById('dateFrom').value
                         endDate = document.getElementById('dateTill').value

                    }
                    if(search =='today'){
                        startDate = new Date().toISOString().split('T')[0]
                        endDate = new Date().toISOString().split('T')[0]
                    }
                    if(search =='week'){
                        endDate = new Date().toISOString().split('T')[0]; 
                        let dayOfWeek = new Date().getDay()
                        startDate = new Date()
                        startDate.setDate(startDate.getDate() - dayOfWeek)
                    }
                    if(search =='month'){
                        endDate = new Date().toISOString().split('T')[0]; 
                        let currentDate = new Date(); 
                        startDate = new Date(currentDate.getFullYear(), currentDate.getMonth(), 1)
                    }
                   console.log(search)
                   console.log(startDate)
                    const response = await fetch(`/admin/dashboard?startDate=${startDate}&endDate=${endDate}&search=${search}`,{
                        method:"GET",
                        headers:{'Content-Type':'application/json'}
                    })
                    if (response.ok) {
                    const html = await response.text();
                    document.body.innerHTML = html;
                } else {
                    console.error('Error:', response.statusText);
                }
                } catch (error) {
                    console.log(error)
                }
            }

           
        </script>
 <%- include('../layoutAdmin/footer.ejs') %>