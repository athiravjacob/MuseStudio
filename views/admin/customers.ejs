<%-include('../layoutAdmin/header.ejs') %>
    <%-include('../layoutAdmin/asideMenu.ejs') %>
    <main class="main-wrap">
        <%-include('../layoutAdmin/navigation.ejs') %>
        <section class="content-main">
            <div class="content-header">
                <h2 class="content-title">Customers list</h2>
                <% -include('../layoutUser/flashError.ejs') %>

                <div>
                    <a href="#" class="btn btn-primary"><i class="material-icons md-plus"></i> Create new</a>
                </div>
            </div>
            <div class="card mb-4">
                <header class="card-header">
                    <div class="row gx-3">
                        <div class="col-lg-4 col-md-6 me-auto">
                            <input type="text" placeholder="Search..." class="form-control">
                        </div>
                        <div class="col-lg-2 col-md-3 col-6">
                            <select class="form-select">
                                <option>Status</option>
                                <option>Active</option>
                                <option>Disabled</option>
                                <option>Show all</option>
                            </select>
                        </div>
                        <div class="col-lg-2 col-md-3 col-6">
                            <select class="form-select">
                                <option>Show 20</option>
                                <option>Show 30</option>
                                <option>Show 40</option>
                            </select>
                        </div>
                    </div>
                </header> <!-- card-header end// -->
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Customers</th>
                                    <th>Email</th>
                                    <th>Phone</th>
                                    <th>Registered</th>
                                    <th class="text-end"> Block </th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if(customer.length >0){ %>
                                    <% for(let i =0;i<customer.length;i++){ %>
                                   
                                <tr>
                                    <td width="40%">
                                        <a href="#" class="itemside">
                                            <!-- <div class="left">
                                                <img src="/admin_assets/imgs/people/avatar1.jpg" class="img-sm img-avatar" alt="Userpic">
                                            </div> -->
                                            <div class="info pl-3">
                                                <h6 class="mb-0 title"><%=customer[i].username %></h6>
                                                <!-- <small class="text-muted">Seller ID: #439</small> -->
                                            </div>
                                        </a>
                                    </td>
                                    <td><%=customer[i].email %></td>
                                    <td><%=customer[i].phone %></td>
                                    <td>08.07.2022</td>
                                    <td class="text-end">
                                        <% if(customer[i].blocked){ %>
                                        <a href="/admin/customers/unblock/<%=customer[i]._id %>" class="btn btn-sm btn-brand rounded font-sm mt-15">Unblock</a>
                                        <% }else{ %>
                                            <a href="/admin/customers/block/<%=customer[i]._id %>" class="btn btn-sm btn-brand rounded font-sm mt-15">Block</a>
                                            <% } %>
                                    </td>
                                </tr>
                                <% } %>
                                <% } else { %>    
                                    <p>User Not Found</p>
                                    <% } %>  
                               
                            </tbody>
                        </table> <!-- table-responsive.// -->
                    </div>
                </div> <!-- card-body end// -->
            </div> <!-- card end// -->
            
        </section> <!-- content-main end// -->
       <%-include('../layoutAdmin/footer.ejs') %>