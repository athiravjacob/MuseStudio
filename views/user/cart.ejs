    <script>
        // ********************************** Clear Cart
        const clearCart = async()=>{
            try {
                const response = await fetch(`/cart/deleteCart`,{
                    method:'DELETE',
                    headers :{
                        'content-Type' : "application/json"
                    }
                })
                if(response.ok){
                    window.location.reload()
                }
                
            } catch (error) {
             console.log(error)   
            }
        }

        // ********************************** Remove Item
        const removeItem =async(productId)=>{
            try {
                const response = await fetch(`/cart/removeItem/${productId}`,{
                    method :"PATCH",
                    "Content-Type": "application/json"

                })
                if(response.ok) window.location.reload()
            } catch (error) {
                console.log(error)
            }
        }
        // *************************** change quantity 
        const qtyup = async(id,stock)=>{
           try {
            const qtyValue = document.getElementById(`qtyValue_${id}`)
            const qty = parseInt(qtyValue.textContent,10)
            if(qty < 5 && stock >qty){
                qtyValue.textContent =qty+1
                const response = await fetch(`/cart/changeQty/${id}`,{
                    method:'PATCH',
                    headers:{
                        'Content-Type':'application/json'
                    },
                    body:JSON.stringify({qty:1})
                })
                if(response.ok) window.location.reload()
            }else alert("Maximum quantity added ")
           } catch (error) {
            
           }

        }

        const qtydown = async(id)=>{
           try {
            const qtyValue = document.getElementById(`qtyValue_${id}`)
            const qty = parseInt(qtyValue.textContent,10)
            if(qty >1){
                qtyValue.textContent =qty-1
                const response = await fetch(`/cart/ChangeQty/${id}`,{
                    method:'PATCH',
                    headers:{
                        'Content-Type':'application/json'
                    },
                    body:JSON.stringify({qty:-1})
                })
                if(response.ok) window.location.reload()
            }
           } catch (error) {
            
           }

        }

        const applyCoupon = async()=>{
            const coupon = document.getElementById('availableCoupons').value
            
                const response = await fetch(`/cart/applycoupon/${coupon}`,{
                    method : "PATCH",
                    headers :{
                        'Content-Type' :'application/json'
                    }
                })
                if(response.ok) window.location.reload()
            }

    const removeCoupon = async()=>{
        const response = await fetch('/cart/removeCoupon',{
            method : "PATCH",
                    headers :{
                        'Content-Type' :'application/json'
                    }
        })
        if(response.ok) window.location.reload()
    }
        
    </script>
