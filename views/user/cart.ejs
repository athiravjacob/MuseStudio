                                                            <a href="" onclick="removeCoupon()"  class="text-end text-decoration-none">Remove</a><% } %>
                                                        </div> 
                                                          <td class="cart_total_amount"><i class="ti-gift mr-5"></i> <%=cart.couponDiscount %></td>
                                                </tr>
                                                <tr>
                                                    <td class="cart_total_label">Total</td>
                                                    <td class="cart_total_amount"><strong><span class="font-xl fw-900 text-brand">$<%= cart.shippingTotal %></span></strong></td>
                                                </tr>
                                                <% } else { %>
                                                <tr>
                                                    <td colspan="2" class="text-center">Your cart is empty.</td>
                                                </tr>
                                                <% } %>
                                            </tbody>
                                        </table>
                                    </div>
                                    <a href="/checkout" class="btn btn-primary w-100 mt-3">
                                        <i class="fi-rs-box-alt mr-10"></i> Proceed To CheckOut
                                    </a>
                                </div>
                            </div>
                        </div>
                        
                       
                        
                        

                    <% }else{ %>
                        <div class="col-12">
                            <h3 class="text-center text-brand fw-bolder "> Your cart is empty</h3>

                            <a href="/shop" class="btn "><i class="fi-rs-shopping-bag mr-10"></i>Continue Shopping</a>

                        </div>
                    <%} %>
                </div>
            </div>
